{
    "compilerOptions": {
        "strict": true,

        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "outDir": "dist",
        "checkJs": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,

        "baseUrl": "src",
        "paths": {
            "~/*": ["./*"],
        },
        "typeRoots": ["node_modules/@types", "src/types"]
    },

    "include": ["./**/*.ts", "./**/*.tsx", "./**/*.js", "./**/*.jsx"],
    "exclude": ["./config/**/*.js", "./build/*", "./webpack.config.js"]
}
